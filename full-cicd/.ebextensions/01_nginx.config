files:
  "/etc/nginx/conf.d/01_app.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 80;
          server_name _;
          
          location / {
              root /var/app/current/dist;
              index index.html;
              try_files $uri $uri/ /index.html;
          }
          
          location /static/ {
              root /var/app/current/dist;
              expires 1y;
              add_header Cache-Control "public, immutable";
          }
      }

commands:
  01_reload_nginx:
    command: "service nginx reload"